<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.MainMenuController"
      spacing="20"
      alignment="CENTER" stylesheets="@../css/styles.css" prefWidth="100" minWidth="100" maxWidth="100">

    <Button text="Play with Bot" onAction="#handlePlayWithBot"
            styleClass="menu-button" prefWidth="200" />

    <Button text="Play with Friend" onAction="#handlePlayWithFriend"
            styleClass="menu-button"
            prefWidth="200" />

    <Button text="View Leaderboard" onAction="#handleViewLeaderboard"
            styleClass="menu-button"
            prefWidth="200" />

    <Button text="View Match History" onAction="#handleViewMatchHistory"
            styleClass="menu-button"
            prefWidth="200" />
</VBox>